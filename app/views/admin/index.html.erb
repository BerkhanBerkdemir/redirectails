<%= provide(:title, 'Dashboard') %>

<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Original URL</th>
      <th>Generated URL</th>
      <th>Status</th>
      <th>Created</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% @url.each do |url| %>
    <tr>
      <td><%= url.id %></td>
      <td><%= url.url %></td>
      <td><%= url.url_id %></td>
      <td><% if url.status %>Private<% else %>Public<% end %></td>
      <td><time datetime="<%= url.created_at %>"><%= url.created_at.strftime("%A, %b %d, %Y, %I:%M %p") %></time></td>
      <td><%= link_to 'Delete', admin_path(url),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
