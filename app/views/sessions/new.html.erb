<h1>Login</h1>

<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<%= form_tag login_path do %>
  <%= t 'global.username' %>: <%= text_field_tag :username %> <br>
  <%= t 'global.password' %>: <%= password_field_tag :password %> <br>
  <%= submit_tag "Submit" %>
<% end %>
